<div class = "container login">
 <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
 <h2> login page </h2>
 <%= form_tag(login_logincheck_path) do %>
  username or email<%= text_field_tag "username",nil,placeholder: "enter user name",class: "form form-control",required: true%><br>
  password: <%= password_field_tag "password",nil,placeholder: "enter user name",class: "form form-control",required: true%><br>
  <%= submit_tag "login",class: "btn btn-success"%> 
 <%end-%>
</div>